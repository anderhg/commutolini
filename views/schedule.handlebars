        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/homepage">Commutolini</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/homepage"><i class="glyphicon glyphicon-home"></i>Home<span class="sr-only">(current)</span></a></li>
        <li><a href="/schedule"><i class="glyphicon glyphicon-list-alt"></i>Schedule<span class="sr-only">(current)</span></a></li>
        <li><a href="/profile"><i class="glyphicon glyphicon-user"></i>Profile<span class="sr-only">(current)</span></a></li>


      </ul>
      <p class="navbar-text navbar-right">Signed in as <a href="/profile" class="navbar-link">Stian Vale</a>&nbsp&nbsp&nbsp</p>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

		<div class="jumbotron homepage">
			<h1> Edit Schedule </h1>
		</div>

		<div class="row schedule">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="homeAddress"><i class="glyphicon glyphicon-home"></i>4467 Dawes Street</label>
                </div>

                <div class="form-group">
                    <label for="destinationAddress"><i class="glyphicon glyphicon-flag"></i>Torrey Pines Gliderport</label>
                </div>

                <div class="form-group">
                	<button type="button" class="btn btn-success" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Edit Adresses</button>
            	</div>

                <div class="collapse" id="collapseExample">
	                <div class="form-group">
		                <form class="form-inline">
						  <div class="form-group">
						    <input type="text" class="form-control" placeholder="New home address" id="inHome">
						  </div>
						  <button type="submit" class="btn btn-default">Change Home Address</button>
						  <div class="form-group" id="destination">
						    <input type="text" class="form-control" placeholder="New destination" id="inDest">
						  </div>
						  <button type="submit" class="btn btn-default">Change Destination Address</button>
						</form>   
					</div> 
				</div>  
            </div>
        </div>

   
     	<div class="row">
	        <div class="col-md-12">
	            <div class="panel-group" id="accordion">
	                <div class="panel panel-default">
		    				{{#each days}}
			                    <div class="panel-heading">
			                        <h4 class="panel-title">
			                            <a data-toggle="collapse" data-parent="#accordion" href="#{{id}}">{{name}}</a>
			                        </h4>
			                    </div>
			                    <div id="{{id}}" class="panel-collapse collapse">
			                        <div class="panel-body">
			                            <div class="row">
			                                <div class="col-md-12">
			                                    <div class="form-group">
			                                        <input type="text" id="{{code}}Start" class="form-control" placeholder="Leaving home at" value="{{start}}" required />
			                                    </div>
			                                    <div class="form-group">
			                                        <input type="text" id="{{code}}End" class="form-control" placeholder="Going home at" value="{{end}}"required />
			                                    </div>
			                                    <div class="form-group">
													  <label for="sel1">Available seats:</label>
													  <select class="form-control" id="{{code}}Seats" value="{{seats}}">
											    		<option>1</option>
												    	<option>2</option>
													    <option>3</option>
													    <option>4</option>
													    <option>5</option>
													    <option>6</option>
													  </select>
												</div>
			                                </div>
			                            </div>
			                        </div>
			                    </div>
							{{/each}}
	                </div>
	            </div>	            
	        </div>
	    </div>

		<a href="#" class="btn btn-success btn-sm" id="saveSchedule"><span class="glyphicon glyphicon-floppy-disk"></span>Save</a>


		<div class="backButton">
			<a href="./homepage" class="button">Back</a>
		</div>

		<script src="https://code.jquery.com/jquery.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/js/introHCI.js"></script>

	</div>
</body>
</html>